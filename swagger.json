{
    "openapi": "3.0.0",
    "info": {
        "title": "API do app palatos",
        "description": "essa api tem como o objetivo receber tratar os dados recebidos do app palatos e devolver o que for solicitado",
        "contact": {
            "email": "joaopedrot1912@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://45.224.129.126:8085",
            "description": "API de produção"
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "summary": "Buscar todos os usuarios",
                "description": "Essa rota será responsável por buscar todos os usuarios cadastrados",
                "tags": ["users"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Um array de objetos dos usuários cadastrados",
                        "content": {
                            "aplication/json": {
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref": "#/components/schemas/Usuario"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/users/auth": {
            "get": {
                "summary": "Authenticar um usuário",
                "description": "Essa rota vai verificar se token que foi enviado está valido ou não",
                "tags": ["users"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example":  "user authenticated"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/getUser": {
            "get":{
                "summary": "Buscar um usuário",
                "description": "Essa rota vai buscar um usuário por id",
                "tags": ["users"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "O id do usuário",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Um objeto de um usuário",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                        
                    }
                }
            }
        },
        "/users/newUser": {
            "post": {
                "summary": "Criar um usuário",
                "description": "Essa rota vai criar um usuário",
                "tags": ["users"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "aplication/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome_completo": {
                                        "type": "string",
                                        "example": "João Pedro Silva Teixeira"
                                    },
                                    "foto": {
                                        "type": "string",
                                        "format": "binary",
                                        "example": "base64_encoded_image_data"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "joao@gmail.com"
                                    },
                                    "senha": {
                                        "type": "string",
                                        "example": "umaSenha123"
                                    }
                                }
                            }
                        }
                    }   
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "O usuário ja existe"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nome_completo":{
                        "type": "string",
                        "maxLength": 40
                    },
                    "senha": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "email": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "foto": {
                        "type": "string",
                        "nullable": false
                    }

                }
            }
        }
    }

}