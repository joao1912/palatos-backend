{
    "openapi": "3.0.0",
    "info": {
        "title": "API do app palatos",
        "description": "essa api tem como o objetivo receber tratar os dados recebidos do app palatos e devolver o que for solicitado",
        "contact": {
            "email": "joaopedrot1912@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://45.224.129.126:8085",
            "description": "API de produção"
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "summary": "Buscar todos os usuarios",
                "description": "Essa rota será responsável por buscar todos os usuarios cadastrados",
                "tags": ["users"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Um array de objetos dos usuários cadastrados",
                        "content": {
                            "aplication/json": {
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref": "#/components/schemas/Usuario"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/users/auth": {
            "get": {
                "summary": "Authenticar um usuário",
                "description": "Essa rota vai verificar se token que foi enviado está valido ou não",
                "tags": ["users"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example":  "user authenticated"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/getUser": {
            "get":{
                "summary": "Buscar um usuário",
                "description": "Essa rota vai buscar um usuário por id",
                "tags": ["users"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "O id do usuário",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Um objeto de um usuário",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                        
                    }
                }
            }
        },
        "/users/newUser": {
            "post": {
                "summary": "Criar um usuário",
                "description": "Essa rota vai criar um usuário",
                "tags": ["users"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "aplication/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome_completo": {
                                        "type": "string",
                                        "example": "João Pedro Silva Teixeira"
                                    },
                                    "foto": {
                                        "type": "string",
                                        "format": "binary",
                                        "example": "base64_encoded_image_data"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "joao@gmail.com"
                                    },
                                    "senha": {
                                        "type": "string",
                                        "example": "umaSenha123"
                                    }
                                }
                            }
                        }
                    }   
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "O usuário ja existe"
                    }
                }
            }
        },
        "/restaurante/": {
            "get": {
                "summary": "Buscar todos os restaurantes",
                "description": "Essa rota é responsável por buscar todas os restaurantes cadastrados",
                "tags": ["restaurante"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Restaurante"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/restaurante/search/": {
            "get": {
                "summary": "Buscar um restaurante por id",
                "description": "Essa rota é responsável por buscar um restaurante cadastrado",
                "tags": ["restaurante"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Restaurante"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    },
                    "400": {
                        "description": "Não foi possível encontrar um restaurante com este ID"
                    }
                }
            }
        },
        "/restaurante/add": {
            "post": {
                "summary": "Criar um restaurante",
                "description": "Essa rota será respnsável por criar um novo restaurante",
                "tags": ["restaurante"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string",
                                        "example": "El palatos"
                                    },
                                    "descricao": {
                                        "type": "string",
                                        "example": "Uma descrição muito boa, o restaurante é ótimo com qualquer tipo de comida, todo tipo de cliente é bem vindo aqui!"
                                    },
                                    "plano": {
                                        "type": "integer",
                                        "example": 3
                                    },
                                    "endereco": {
                                        "type": "string",
                                        "example": "Rua maria marta dos anjos"
                                    },
                                    "cep": {
                                        "type": "string",
                                        "example": "88040235"
                                    },
                                    "rua": {
                                        "type": "string"
                                    },
                                    "reservasAtivas": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "tempoTolerancia": {
                                        "type": "integer",
                                        "example": 20
                                    },
                                    "telefone": {
                                        "type": "string",
                                        "example": "0000-0000"
                                    },
                                    "celular": {
                                        "type": "string",
                                        "example": "4998335567"
                                    },
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "token": {
                                            "type": "string"
                                        },
                                        "resultRestaurant": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "nullable": false
                                                },
                                                "nome": {
                                                    "type": "string",
                                                    "maxLength": 40,
                                                    "nullable": false
                                                },
                                                "descricao": {
                                                    "type": "string"
                                                },
                                                "foto": {
                                                    "type": "string",
                                                    "example": "http://45.224.129.126:8085/files/nome-foto"
                                                },
                                                "plano": {
                                                    "type": "integer",
                                                    "nullable": false
                                                },
                                                "endereco": {
                                                    "type": "string",
                                                    "nullable": false,
                                                    "maxLength": 50
                                                },
                                                "cep": {
                                                    "type": "string",
                                                    "maxLength": 10
                                                },
                                                "rua": {
                                                    "type": "string",
                                                    "maxLength": 35
                                                }
                                            }
                                        }
                                    }
                                    
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error"
                    },
                    "400": {
                        "description": "O servidor falhou em criar o restaurante"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nome_completo":{
                        "type": "string",
                        "maxLength": 40
                    },
                    "senha": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "email": {
                        "type": "string",
                        "maxLength": 40
                    },
                    "foto": {
                        "type": "string",
                        "nullable": false
                    }

                }
            },
            "Restaurante": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "nullable": false
                    },
                    "nome": {
                        "type": "string",
                        "maxLength": 40,
                        "nullable": false
                    },
                    "descricao": {
                        "type": "string"
                    },
                    "foto": {
                        "type": "string"
                    },
                    "plano": {
                        "type": "integer",
                        "nullable": false
                    },
                    "endereco": {
                        "type": "string",
                        "nullable": false,
                        "maxLength": 50
                    },
                    "cep": {
                        "type": "string",
                        "maxLength": 10
                    },
                    "rua": {
                        "type": "string",
                        "maxLength": 35
                    },
                    "fk_contato": {
                        "type": "integer",
                        "nullable": false
                    },
                    "fk_usuario": {
                        "type": "integer",
                        "nullable": false
                    }
                }
            }
        }
    }

}